---
import "../styles/global.css";
const {
	title = "露草おこじょ堂",
	indexable = false, // ★ デフォルトは非公開
 } = Astro.props;
 const description = "創作物（オリジナル）を載せている個人サイトです。";
 const image = "https://tsuyukusa-okojodo.pages.dev/images/common/ogp.png";
 const url = new URL(Astro.url.pathname, Astro.site).href;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <!-- OGP -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={image} />

    <!-- X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png?v=1">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.png?v=1">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=1">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=1">


    <meta name="viewport" content="width=device-width, initial-scale=1" />
	{indexable ? (
      <meta name="robots" content="index, follow" />
     ) : (
      <meta name="robots" content="noindex, nofollow, noarchive, nosnippet" />
    )}
  </head>

  <body class={Astro.url.pathname === "/" ? "home" : ""} oncontextmenu="return false;">
    <header class="site-header">
        <a href="/"><img src="/favicon.png"></a>

      <nav class="site-nav">
        <ul>
		  <li><a href="/about/">About</a></li>
		  <li><a href="/stories/">Stories</a></li>
          <li><a href="/illust/">Illust</a></li>
          <li><a href="/comic/">Comic</a></li>
          <li><a href="/novel/">Novel</a></li>
		  <li><a href="/links/">links</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <small>© {new Date().getFullYear()} HanadaMasora</small>
	  <div class="social-links">
	  	<a href="https://note.com/msr_4cb8e7" target="_blank" rel="noopener noreferrer">
			<img src="/images/common/note_icon.svg" alt="note" width="28" height="28"/>
		</a>
	  </div>
    </footer>
  </body>
</html>
